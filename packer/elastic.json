{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/hvm-ssd/ubuntu-xenial-16.04-amd64-server-*"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "elastic-{{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": "20",
          "volume_type": "gp2",
          "delete_on_termination": "true"
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../files/elasticsearch.yml",
      "destination": "/home/ubuntu/elasticsearch.yml"
    },
    {
      "type": "file",
      "source": "../files/kibana.yml",
      "destination": "/home/ubuntu/kibana.yml"
    },
    {
      "type": "file",
      "source": "../files/sites-available-default",
      "destination": "/home/ubuntu/sites-available-default"
    },
    {
      "type": "shell",
      "script": "elastic_provision.sh"
    }
  ]
}
