{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/hvm-ssd/ubuntu-xenial-16.04-amd64-server-*"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "easytravel-{{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": "20",
          "volume_type": "gp2",
          "delete_on_termination": "true"
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source" : "../files/easytravel.service",
      "destination": "/home/ubuntu/easytravel.service"
    },
    {
      "type": "file",
      "source" : "../files/uemload.service",
      "destination": "/home/ubuntu/uemload.service"
    },
    {
      "type": "shell",
      "script": "easytravel_provision.sh"
    }
  ]
}
